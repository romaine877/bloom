{
  "name": "bloom-app",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@tanstack/react-query": "^5.90.12"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @bloom-app/db db:push",
    "db:studio": "turbo -F @bloom-app/db db:studio",
    "db:generate": "turbo -F @bloom-app/db db:generate",
    "db:migrate": "turbo -F @bloom-app/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@bloom-app/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "@types/bun": "catalog:",
    "@bloom-app/config": "workspace:*"
  },
  "packageManager": "bun@1.3.4"
}
